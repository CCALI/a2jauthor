<can-import from="caja/author/alert/alert.less!"/>

<div class="alert {{alertTypeClass}} {{#if dismissible}}alert-dismissible{{/if}}" role="alert">
  {{#if dismissible}}
    <a class="close" aria-label="Close" data-dismiss="alert" can-click="closeAlert">
      <span aria-hidden="true">&times;</span>
    </a>
  {{/if}}

<span class="{{alertTypeSymbol}}" aria-hidden="true">
  <content />
</span>
</div>
