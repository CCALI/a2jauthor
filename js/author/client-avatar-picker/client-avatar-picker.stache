<can-import from="caja/author/client-avatar-picker/client-avatar-picker.less!"/>
<can-import from="caja/viewer/desktop/avatar/" />

<div class="client-avatar-group">
  <div class="row">
    {{#for (avatar of femaleAvatars)}}
      <div class="col-xs-3">
        <div
          class="avatar-cell {{#if (avatar.isSelected)}}avatar-cell--selected{{/if}}"
          on:click="fireAvatar(scope.index)"
        >
          <a2j-viewer-avatar
            kind:raw="client"
            facing:raw="left"
            gender:from="avatar.gender"
            skin:from="avatar.skin"
            hair:from="avatar.hair"
            is-old:from="avatar.isOld"
            has-wheelchair:from="avatar.hasWheelchair"
          />
        </div>
      </div>
    {{/for}}
  </div>
  <div class="row">
    {{#for (avatar of maleAvatars)}}
      <div class="col-xs-3">
        <div
          class="avatar-cell {{#if (avatar.isSelected)}}avatar-cell--selected{{/if}}"
          on:click="fireAvatar(scope.index)"
        >
          <a2j-viewer-avatar
            kind:raw="client"
            facing:raw="left"
            gender:from="avatar.gender"
            skin:from="avatar.skin"
            hair:from="avatar.hair"
            is-old:from="avatar.isOld"
            has-wheelchair:from="avatar.hasWheelchair"
          />
        </div>
      </div>
    {{/for}}
  </div>
</div>
