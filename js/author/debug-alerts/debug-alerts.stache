<can-import from="caja/author/alert/"/>
<can-import from="caja/author/debug-alerts/debug-alerts.less!"/>

<div class="debug-alerts-wrapper">
  <button type="button" class="btn btn-default btn-block btn-dismiss">
    Dismiss All <span class="badge">{{messagesCount}}</span>
  </button>

  {{#each alertMessages}}
    <app-alert vm:open:bind="open" alert-type:from='"danger"' dismissible:from='"true"'>
      {{{message}}}
    </app-alert>
  {{/each}}
</div>
