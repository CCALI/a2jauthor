{{#if a2jTemplate.isPending}}
  <app-loading></app-loading>
{{else}}
  <template-edit-toolbar a2j-template="{a2jTemplate}"></template-edit-toolbar>

  <div class="container">
    <div class="row clearfix">
      <div class="col-md-8">
        <template-elements root-node="{a2jTemplate.value.rootNode}"></template-elements>
      </div>

      <div class="col-md-4">
        <template-edit-tabs></template-edit-tabs>
      </div>
    </div>
  </div>
{{/if}}
