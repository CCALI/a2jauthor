{{#if template.isPending}}
  <app-loading></app-loading>
{{else}}
  <template-edit-toolbar></template-edit-toolbar>

  <div class="container">
    <div class="row clearfix">
      <div class="col-md-8">
        <template-elements elements="{template.value.elements}"></template-elements>
      </div>

      <div class="col-md-4">
        <template-edit-tabs></template-edit-tabs>
      </div>
    </div>
  </div>
{{/if}}
