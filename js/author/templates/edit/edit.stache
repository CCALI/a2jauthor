<div class="page">
  {{#if a2jTemplate.isPending}}
    <app-loading></app-loading>
  {{else}}
    <template-edit-toolbar a2j-template="{a2jTemplate}"></template-edit-toolbar>

    <div class="container">
      <div class="row clearfix">
        <div class="col-md-8">
          <a2j-template template="{a2jTemplate.value}" edit-enabled="true"></a2j-template>
        </div>

        <div class="col-md-4">
          <template-edit-tabs></template-edit-tabs>
        </div>
      </div>
    </div>
  {{/if}}
</div>
