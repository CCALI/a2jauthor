<can-import from="caja/author/templates/elements/options-pane/" />
<can-import from="caja/author/templates/elements/element-container/" />
<can-import from="caja/author/templates/elements/a2j-section-title/a2j-section-title.less!" />

<div>
  {{#if(editEnabled)}}
    <element-container
      nodeId:from="nodeId"
      deleted:from="deleted"
      selected:bind="editActive"
      cloneNode:from="cloneNode"
      deleteNode:from="deleteNode"
      toggleEditActiveNode:from="toggleEditActiveNode">

      {{> section-title-content}}
    </element-container>

    {{#if(editActive)}}
      <element-options-pane
        underline:bind="underline"
        nodeId:from="nodeId"
        title="Section Title"
        saveAndClose:from="updateNode">

        <form on:submit="../preventSubmit(scope.event)">
          <input class="form-control title-input" value:from="../title">
          <div class="form-group">
            <label for="">Title size:</label>
            <select class="form-control" value:bind="../titleTag">
              <option value="h1">Heading 1</option>
              <option value="h2">Heading 2</option>
              <option value="h3">Heading 3</option>
              <option value="h4">Heading 4</option>
              <option value="h5">Heading 5</option>
              <option value="h6">Heading 6</option>
            </select>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" checked:bind="underline"> Underline
            </label>
          </div>
        </form>
      </element-options-pane>
    {{/if}}
  {{else}}
    {{> section-title-content}}
  {{/if}}
</div>
