<can-import from="caja/author/templates/elements/a2j-variable/a2j-variable.less!" />

{{#if value}}
  <span class="var-val">{{value}}</span>
{{else}}
  {{#if isUndeclared}}
    <span class="var-name undeclared">{{name}}</span>
  {{else}}
    <span class="var-name">{{variable.name}}</span>
  {{/if}}
{{/if}}
