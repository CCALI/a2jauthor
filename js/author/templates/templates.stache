{{#if displayList.isResolved}}
  <templates-toolbar filter="{activeFilter}" search-token="{searchToken}"></templates-toolbar>
{{/if}}

<div class="container">
  {{#if displayList.isPending}}
    <span>loading...</span>
  {{/else}}
    <templates-sortbar criteria="{sortCriteria}"></templates-sortbar>
    <templates-list templates="{displayList.value}"></templates-list>
  {{/if}}
</div>




