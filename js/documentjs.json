{
  "siteDefaults": {
    "templates": "styles/documentjs-theme/templates",
    "static": "styles/documentjs-theme/static"
  },
  "sites": {
    "docs": {
      "glob": {
        "pattern": "{author,viewer,styles}/**/*.{js,md,less}",
        "ignore": "{docs,viewer,node_modules,tests,minify,author/{src,libs,docs}}/**/*"
      },
      "dest": "./docs",
      "parent": "author"
    }
  }
}
