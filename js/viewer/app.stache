<can-import from="caja/viewer/mobile/" />
<can-import from="caja/viewer/desktop/" />
<can-import from="caja/viewer/modal/" />
<can-import from="caja/viewer/styles.less!" />

{{#if isMobile}}
  <a2j-mobile-viewer
    {(lang)}="lang"
    {(logic)}="logic"
    {(r-state)}="rState"
    {(p-state)}="pState"
    {(m-state)}="mState"
    class="bootstrap-styles"
    {(interview)}="interview"
    {(modal-content)}="modalContent" />
{{else}}
  <a2j-desktop-viewer
    *desktop-viewer
    {show-debug-panel}="showDebugPanel"
    {(lang)}="lang"
    {(logic)}="logic"
    {(r-state)}="rState"
    {(p-state)}="pState"
    {(m-state)}="mState"
    {(interview)}="interview"
    {(modal-content)}="modalContent"
    {(trace-logic)}="traceLogic"
    class="bootstrap-styles steps-left-{{*desktopViewer.remainingSteps}} steps-{{*desktopViewer.maxDisplayedSteps}}" />
{{/if}}

<a2j-modal
  {(logic)}="logic"
  {(r-state)}="rState"
  {(m-state)}="mState"
  class="bootstrap-styles"
  {(interview)}="interview"
  {(modal-content)}="modalContent"
  {repeat-var-value}="rState.repeatVarValue" />
