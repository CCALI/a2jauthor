<can-import from="viewer/desktop/avatar/avatar.less!" />

<div class="scaling-svg-container">
  {{#if avatarImageName}}
    <object type="image/svg+xml"
      class="scaling-svg"
      ($load)="avatarLoaded()"
      data="{{joinBase 'viewer/images/' avatarImageName}}">
      Your browser does not support SVG
    </object>
  {{/if}}
</div>
