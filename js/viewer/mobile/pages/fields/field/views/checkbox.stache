<can-import from="caja/viewer/mobile/pages/fields/field/views/checkbox.less!" />
<div>
	<div class="{{#if(field.hasError)}}has-error{{/if}}">
		<div class="checkbox">
		<label for="{{label}}">
		<input
			id="{{label}}"
			type="checkbox"
			name="{{name}}"
			{{#if(shouldBeChecked)}}checked{{/if}}
			on:el:change="validateField(null, scope.element)"/>
		{{{ eval(label, repeatVarValue) }}}</label>
		</div>
	</div>

	{{> invalid-prompt-tpl }}
</div>
