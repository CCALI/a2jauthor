<div>
  <div class="form-group {{#if hasError}}has-error{{/if}}">
    <label class="control-label" for="{{label}}">{{{eval label}}}</label>

    <input type="radio" id="m" name="gender" value="m" ($change)="update" />
    <label for="m">Male</label>

    <input type="radio" id="f" name="gender" value="f" ($change)="update" />
    <label for="f">Female</label>
  </div>

  {{#prompt}}
  <div class="alert alert-danger" role="alert">
    {{{eval field.invalidPrompt}}}
  </div>
  {{/prompt}}
