<div>
  <div class="form-group {{#if field.hasError}}has-error{{/if}}">
    <label class="control-label" for="{{label}}">{{{ eval(label, repeatVarValue) }}}</label>

    <input type="radio" id="m" name="gender" value="Male" ($change)="validateField"/>
    <label for="m">{{i18n("Male")}}</label>

    <input type="radio" id="f" name="gender" value="Female" ($change)="validateField"/>
    <label for="f">{{i18n("Female")}}</label>
  </div>

  {{#if showInvalidPrompt}}
    <div class="alert alert-danger" role="alert">
      {{{ eval(field.invalidPrompt, repeatVarValue) }}}
    </div>
  {{/if}}
<div>
