<div>
  <div class="form-group {{#if field.hasError}}has-error{{/if}}">
    <label class="control-label" for="{{label}}">{{{eval label}}}</label>

    <input
      type="number"
      id="{{label}}"
      class="form-control"
      ($change)="validateField"
      {($value)}="field._answer.values"/>
  </div>

  {{#if showInvalidPrompt}}
    <div class="alert alert-danger" role="alert">
      {{{eval field.invalidPrompt}}}
    </div>
  {{/if}}
<div>
