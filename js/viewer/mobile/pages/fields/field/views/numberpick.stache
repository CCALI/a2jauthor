<div>
  <div class="form-group {{#if(field.hasError)}}has-error{{/if}}">
    <label for="{{field.label}}">
      {{{ eval(field.label, repeatVarValue) }}}
      {{#if(field.required)}}<small class="text-danger">(Required)</small>{{/if}}
    </label>

    <select id="{{field.label}}" name="{{field.name}}" value:bind="field._answer.values" on:change="validateField(null, scope.element)" {{#if(required)}}required{{/if}}>
      {{#each(numberPickOptions)}}
        <option value="{{.}}">{{.}}</option>
      {{/each}}
    </select>
  </div>

  {{> invalid-prompt-tpl }}
</div>
