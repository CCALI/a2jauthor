<div>
  <div class="form-group {{#if field.hasError}}has-error{{/if}}">
    <label for="{{label}}">{{{eval label}}}</label>

    <select id="{{label}}" {($value)}="field._answer.values" ($change)="validateField">
      {{#selectnum}}<option value="{{.}}">{{.}}</option>{{/selectnum}}
    </select>
  </div>

  {{#if showInvalidPrompt}}
    <div class="alert alert-danger" role="alert">
      {{{eval field.invalidPrompt}}}
    </div>
  {{/if}}
<div>
