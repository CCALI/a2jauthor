<div>
  <div class="form-group {{#if hasError}}has-error{{/if}}">
    <label class="control-label" for="{{label}}">
      {{{eval label}}}
      {{#if required}}
      <small class="text-danger">(Required)</small>
      {{/if}}
    </label>
    <input id="{{label}}" type="number" ($value)="field._answer.values" ($change)="update" class="form-control"/>
  </div>

  {{#prompt}}
  <div class="alert alert-danger" role="alert">
    {{{eval field.invalidPrompt}}}
  </div>
  {{/prompt}}
<div>
