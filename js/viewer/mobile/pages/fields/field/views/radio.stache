<can-import from="caja/viewer/mobile/pages/fields/field/views/radio.less!" />

<div>
	<div class="a2j-radio-button-group radio">
		<label class="a2j-radio-button-label" for="{{label}}">
		<input
			type="radio"
			id="{{label}}"
			name="{{name}}"
			el:value:bind="value"
			{{#if shouldBeChecked}}checked{{/if}}
			class="a2j-radio-button"
			on:el:change="validateField(null, scope.element)"/>

		{{{ eval(label, repeatVarValue) }}}</label>
	</div>

	{{> invalid-prompt-tpl }}
</div>
