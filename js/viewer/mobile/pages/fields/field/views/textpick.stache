<div>
  <div class="form-group {{#if(field.hasError)}}has-error{{/if}}">
    <label class="control-label" for="{{field.label}}">
      {{{ eval(field.label, repeatVarValue) }}}
      {{#if(field.required)}}<small class="text-danger">(Required)</small>{{/if}}
    </label>

    <select class="form-control" name="{{field.name}}" id="{{field.label}}" value:bind="field._answer.values" on:change="validateField(null, scope.element)" {{#if(required)}}required{{/if}}>
      <option {{#if(field.required)}}disabled{{/if}} value="">{{ lang.ChooseListText }}</option>
      {{{field.options}}}
    </select>
  </div>

  {{> invalid-prompt-tpl }}
</div>
