<can-import from="caja/styles/author.jquery-ui.css" />
<can-import from="caja/viewer/mobile/pages/fields/field/views/datemdy.less!" />
<div>
  <div class="form-group {{#if(field.hasError)}}has-error{{/if}}">
    <label class="control-label" for="{{field.label}}">
      {{{ eval(field.label, repeatVarValue) }}}
      {{#if(field.required)}}<small class="text-danger">({{lang.Required}})</small>{{/if}}
    </label>
    <input
      type="text"
      id:from="this.trimFieldLabel(field.label)"
      name="{{field.name}}"
      on:change="validateField(null, scope.element)"
      {{#if(field.required)}}required{{/if}}
      class="form-control datepicker-input" />
  </div>

  {{> invalid-prompt-tpl }}
</div>
